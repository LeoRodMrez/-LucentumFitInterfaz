<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="lucentum.com.Contactos"
    android:background="#64B5F6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:id="@+id/ll_txt_Contactos">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contactos"
            android:id="@+id/txt_Contactos"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:textColor="#ffffffff"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_Contactos"
        android:layout_below="@+id/ll_txt_Contactos"
        android:baselineAligned="false">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_anadir"
            android:background="@drawable/anadir"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:cropToPadding="false"
            android:contentDescription="anyadir_contactos" />

        <EditText
            android:layout_width="251dp"
            android:layout_height="0dp"
            android:id="@+id/et_NuevoContacto"
            android:background="@drawable/myedittext"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="sans-serif-light"
            android:hint="Nuevo Contacto..."
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:layout_marginRight="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_Contactos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_Contactos"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
